rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Public folder - anyone can read
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Icons folder - anyone can read, only admins can write
    match /icons/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Screenshots folder - anyone can read, only admins can write
    match /screenshots/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
